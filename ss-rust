#!/bin/bash
set -e

# é…ç½®å˜é‡
CONFIG_DIR="/etc/shadowsocks-rust"
NODES_LIST="$CONFIG_DIR/nodes.list"
INSTALL_DIR="/usr/local/bin"
GITHUB_API="https://api.github.com/repos/shadowsocks/shadowsocks-rust/releases/latest"

# æ£€æŸ¥ root æƒé™
[ "$EUID" -ne 0 ] && { echo "âŒ è¯·ä»¥ root ç”¨æˆ·è¿è¡Œ"; exit 1; }

# å®‰è£…ä¾èµ–
install_dependencies() {
    echo "ğŸ”§ æ£€æŸ¥ä¾èµ–..."
    local MISSING=()
    declare -A pkg_commands=( ["curl"]="curl" ["jq"]="jq" ["xz-utils"]="xz" ["openssl"]="openssl" ["net-tools"]="ifconfig" )
    for pkg in "${!pkg_commands[@]}"; do
        command -v "${pkg_commands[$pkg]}" &>/dev/null || MISSING+=("$pkg")
    done
    if [ ${#MISSING[@]} -gt 0 ]; then
        echo "ğŸ“¥ å®‰è£…ç¼ºå¤±ä¾èµ–ï¼š${MISSING[*]}"
        apt-get update -y && apt-get install -y --no-install-recommends "${MISSING[@]}" || { echo "é”™è¯¯ï¼šå®‰è£…ä¾èµ–å¤±è´¥"; exit 1; }
    else
        echo "â„¹ï¸ æ‰€æœ‰ä¾èµ–å·²å®‰è£…"
    fi
}

# åˆ›å»ºèŠ‚ç‚¹
create_node() {
    echo -e "\nğŸ“‹ åˆ›å»ºæ–°èŠ‚ç‚¹"
    read -p "èŠ‚ç‚¹åç§°ï¼ˆç•™ç©ºè‡ªåŠ¨ç”Ÿæˆï¼‰ï¼š" NODE_NAME
    [ -z "$NODE_NAME" ] && NODE_NAME="node$(date +%s | tail -c 3)" && echo "â„¹ï¸ èŠ‚ç‚¹åç§°ï¼š$NODE_NAME"

    CONFIG_FILE="$CONFIG_DIR/node-$NODE_NAME.json"
    SERVICE_NAME="shadowsocks-rust-$NODE_NAME"

    [ -f "$CONFIG_FILE" ] && { echo "âš ï¸ èŠ‚ç‚¹ $NODE_NAME å·²å­˜åœ¨"; return 1; }
    mkdir -p "$CONFIG_DIR" && chmod 700 "$CONFIG_DIR"
    install_dependencies

    # éšæœºç«¯å£
    for i in {1..10}; do
        PORT=$((RANDOM % 10000 + 10000))
        ss -tuln | grep -q ":$PORT\b" || break
        [ $i -eq 10 ] && { echo "é”™è¯¯ï¼šæ— å¯ç”¨ç«¯å£"; exit 1; }
    done

    PASSWORD=$(openssl rand -base64 12 | tr -d '/+=')
    METHOD="aes-256-gcm"
    LISTEN_ADDR="0.0.0.0"

    # ä¸‹è½½ Shadowsocks-Rust
    if ! command -v ssserver &>/dev/null; then
        echo "ğŸ“¥ å®‰è£… Shadowsocks-Rust..."
        ARCH=$(uname -m)
        case "$ARCH" in
            x86_64) FILE="shadowsocks-v1.23.5.x86_64-unknown-linux-gnu.tar.xz" ;;
            aarch64) FILE="shadowsocks-v1.23.5.aarch64-unknown-linux-gnu.tar.xz" ;;
            *) echo "âŒ ä¸æ”¯æŒæ¶æ„ $ARCH"; exit 1 ;;
        esac

        TMPDIR=$(mktemp -d)
        trap 'rm -rf "$TMPDIR"' EXIT
        cd "$TMPDIR"

        echo "ğŸ” è·å–æœ€æ–°ç‰ˆæœ¬..."
        RELEASE=$(curl -sSL "$GITHUB_API" -H "Accept: application/vnd.github.v3+json" || { echo "é”™è¯¯ï¼šæ— æ³•è®¿é—® GitHub API"; exit 1; })
        [ -z "$RELEASE" ] && { echo "é”™è¯¯ï¼šGitHub API è¿”å›ç©ºæ•°æ®"; exit 1; }

        VERSION=$(echo "$RELEASE" | jq -r '.tag_name')
        echo "â„¹ï¸ æœ€æ–°ç‰ˆæœ¬ï¼š$VERSION"
        FILE=$(echo "$FILE" | sed "s/v1.23.5/$VERSION/")

        echo "ğŸ“‹ å¯ç”¨èµ„äº§ï¼š"
        echo "$RELEASE" | jq -r '.assets[].name'

        URL=$(echo "$RELEASE" | jq -r ".assets[] | select(.name == \"$FILE\") | .browser_download_url")
        [ -z "$URL" ] && { echo "é”™è¯¯ï¼šæœªæ‰¾åˆ° $FILE"; echo "æ£€æŸ¥ï¼šhttps://github.com/shadowsocks/shadowsocks-rust/releases"; exit 1; }
        echo "â„¹ï¸ ä¸‹è½½ URLï¼š$URL"

        curl -L "$URL" -o ss.tar.xz || { echo "é”™è¯¯ï¼šä¸‹è½½ $URL å¤±è´¥"; exit 1; }
        tar -xf ss.tar.xz || { echo "é”™è¯¯ï¼šè§£å‹å¤±è´¥"; exit 1; }
        install -m 755 ssserver sslocal ssmanager "$INSTALL_DIR/" || { echo "é”™è¯¯ï¼šå®‰è£…å¤±è´¥"; exit 1; }
        cd ~ && rm -rf "$TMPDIR"
    fi

    # å†™å…¥é…ç½®æ–‡ä»¶
    cat > "$CONFIG_FILE" <<EOF
{
    "server": "$LISTEN_ADDR",
    "server_port": $PORT,
    "password": "$PASSWORD",
    "method": "$METHOD",
    "mode": "tcp_and_udp"
}
EOF
    chmod 600 "$CONFIG_FILE"
    chown root:root "$CONFIG_FILE"

    # éªŒè¯ JSON æ ¼å¼
    echo "ğŸ” éªŒè¯é…ç½®æ–‡ä»¶ $CONFIG_FILE..."
    jq . "$CONFIG_FILE" >/dev/null || { echo "é”™è¯¯ï¼šé…ç½®æ–‡ä»¶ JSON æ ¼å¼æ— æ•ˆ"; cat "$CONFIG_FILE"; exit 1; }

    # éªŒè¯é…ç½®æœ‰æ•ˆæ€§
    echo "ğŸ” æµ‹è¯•é…ç½®æ–‡ä»¶..."
    /usr/local/bin/ssserver -c "$CONFIG_FILE" >/dev/null 2>&1 & sleep 1; kill $! 2>/dev/null || { echo "é”™è¯¯ï¼šé…ç½®æ–‡ä»¶å‚æ•°æ— æ•ˆ"; cat "$CONFIG_FILE"; exit 1; }

    # åˆ›å»º systemd æœåŠ¡
    cat > "/etc/systemd/system/$SERVICE_NAME.service" <<EOF
[Unit]
Description=Shadowsocks-Rust Server ($NODE_NAME)
After=network.target

[Service]
Type=simple
ExecStart=$INSTALL_DIR/ssserver -c $CONFIG_FILE
Restart=always

[Install]
WantedBy=multi-user.target
EOF

    systemctl daemon-reload
    systemctl enable --now "$SERVICE_NAME" || { echo "é”™è¯¯ï¼šå¯åŠ¨æœåŠ¡å¤±è´¥"; journalctl -u "$SERVICE_NAME" -b; exit 1; }

    IP=$(curl -s https://api.ipify.org || curl -s https://ifconfig.me || echo "unknown")
    [ "$IP" = "unknown" ] && echo "âš ï¸ æ— æ³•è·å–å…¬ç½‘ IP"
    ENCODED=$(echo -n "$METHOD:$PASSWORD@$IP:$PORT" | base64 -w 0)
    echo "$NODE_NAME $PORT $PASSWORD $METHOD" >> "$NODES_LIST"

    echo -e "\nâœ… èŠ‚ç‚¹ $NODE_NAME éƒ¨ç½²æˆåŠŸ"
    echo "ğŸ“ é“¾æ¥: ss://${ENCODED}#${NODE_NAME}"
}

# åˆ é™¤èŠ‚ç‚¹
delete_node() {
    echo -e "\nğŸ§¹ åˆ é™¤èŠ‚ç‚¹"
    local NODES=()
    if [ -f "$NODES_LIST" ]; then
        mapfile -t NODES < <(cut -d ' ' -f1 "$NODES_LIST")
    else
        mapfile -t NODES < <(find "$CONFIG_DIR" -name 'node-*.json' -exec basename {} \; | sed 's/^node-//;s/\.json$//')
    fi

    [ ${#NODES[@]} -eq 0 ] && { echo "âœ… æ— èŠ‚ç‚¹å¯åˆ é™¤"; return; }
    echo "ğŸ“‹ å½“å‰èŠ‚ç‚¹ï¼š"
    for i in "${!NODES[@]}"; do
        printf "  %2d) %s\n" $((i+1)) "${NODES[$i]}"
    done
    echo "   0) è¿”å›"
    read -p "é€‰æ‹©èŠ‚ç‚¹ç¼–å·ï¼š" ID

    [ "$ID" = "0" ] && return
    [[ "$ID" =~ ^[0-9]+$ ]] && (( ID >= 1 && ID <= ${#NODES[@]} )) || { echo "âŒ æ— æ•ˆç¼–å·"; return; }
    NODE="${NODES[$((ID-1))]}"
    echo "ğŸ§¹ åˆ é™¤èŠ‚ç‚¹ $NODE..."
    systemctl stop "shadowsocks-rust-$NODE" 2>/dev/null || true
    systemctl disable "shadowsocks-rust-$NODE" 2>/dev/null || true
    rm -f "/etc/systemd/system/shadowsocks-rust-$NODE.service" "$CONFIG_DIR/node-$NODE.json"
    [ -f "$NODES_LIST" ] && sed -i "/^$NODE /d" "$NODES_LIST"
    systemctl daemon-reload
    echo "âœ… èŠ‚ç‚¹ $NODE å·²åˆ é™¤"
}

# ä¸»èœå•
while true; do
    echo -e "\nğŸ§­ Shadowsocks-Rust ç®¡ç†èœå•"
    echo "1) åˆ›å»ºèŠ‚ç‚¹"
    echo "2) åˆ é™¤èŠ‚ç‚¹"
    echo "0) é€€å‡º"
    read -p "æ“ä½œç¼–å·ï¼š" CHOICE
    case "$CHOICE" in
        1) create_node ;;
        2) delete_node ;;
        0) echo "ğŸ‘‹ å†è§ï¼"; exit 0 ;;
        *) echo "âŒ æ— æ•ˆé€‰é¡¹" ;;
    esac
done
